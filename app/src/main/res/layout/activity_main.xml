<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:background="#EDE7E3"
        android:text="@string/app_name"
        android:textColor="#45817C"
        android:textSize="34sp"
        ads:autoSizeMaxTextSize="60sp"
        ads:autoSizeMinTextSize="10sp"
        ads:autoSizeStepGranularity="2sp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:background="#EDE7E3"
        android:ems="10"
        android:hint="@string/instructions"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColor="#45817C"
        android:textColorHint="#45817C"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="#45817C"
        android:contentDescription="@string/panda_content_description"
        ads:srcCompat="@drawable/panda1" />

